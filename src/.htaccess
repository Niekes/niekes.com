# Aktiviere mod_rewrite
RewriteEngine On

# --- 1. HTTP zu HTTPS umleiten ---
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://niekes.com/$1 [R=301,L]

# --- 2. .html verstecken (internes Umschreiben) ---
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^/]+)$ $1.html [L]

# --- 3. .html-URLs auf saubere URLs umleiten (f√ºr SEO) ---
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/([^/]+)\.html\s
RewriteRule ^([^/]+)\.html$ /$1 [R=301,L]